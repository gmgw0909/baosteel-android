<?xml version="1.0" encoding="utf-8"?>
<com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_page_bg"
    >

  <include
      android:id="@+id/ic_header"
      layout="@layout/header_exp_info"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      app:layout_heightPercent="12.8%"
      />

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@id/ic_header"
      >
    <com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

      <com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout
          android:id="@+id/rl_serialNumber"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:layout_marginLeftPercent="4%"
          app:layout_marginTopPercent="2%"
          >

        <TextView
            android:id="@+id/tv_tips_serialNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/txt_exp_serialNumber"
            />
        <TextView
            android:id="@+id/tv_serialNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_tips_serialNumber"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
      </com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout>


      <com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout
          android:id="@+id/rl_exp_project"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/rl_serialNumber"
          app:layout_marginLeftPercent="4%"
          app:layout_marginTopPercent="3%"
          >

        <TextView
            android:id="@+id/tv_tips_exp_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/txt_exp_project"
            />
        <TextView
            android:id="@+id/tv_exp_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_tips_exp_project"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
      </com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout>

      <com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout
          android:id="@+id/rl_exp_furnace"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/rl_exp_project"
          app:layout_marginLeftPercent="4%"
          app:layout_marginTopPercent="3%"
          >

        <TextView
            android:id="@+id/tv_tips_exp_furnace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/txt_exp_furnace"
            />
        <TextView
            android:id="@+id/tv_exp_furnace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_tips_exp_furnace"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
      </com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout>

      <com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout
          android:id="@+id/rl_exp_startTime"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/rl_exp_furnace"
          app:layout_marginLeftPercent="4%"
          app:layout_marginTopPercent="3%"
          >

        <TextView
            android:id="@+id/tv_tips_exp_startTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/txt_exp_startTime"
            />
        <TextView
            android:id="@+id/tv_exp_startTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_tips_exp_startTime"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
      </com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout>


      <com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout
          android:id="@+id/rl_exp_duration"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/rl_exp_startTime"
          app:layout_marginLeftPercent="4%"
          app:layout_marginTopPercent="3%"
          >

        <TextView
            android:id="@+id/tv_tips_exp_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/txt_exp_duration"
            />
        <TextView
            android:id="@+id/tv_exp_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_tips_exp_duration"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
      </com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout>

      <com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout
          android:id="@+id/rl_exp_description"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/rl_exp_duration"
          app:layout_marginLeftPercent="4%"
          app:layout_marginTopPercent="3%"
          >

        <TextView
            android:id="@+id/tv_tips_exp_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/txt_exp_description"
            />
        <TextView
            android:id="@+id/tv_exp_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_tips_exp_description"
            android:textColor="@color/black"
            app:layout_marginRightPercent="4%"
            app:layout_marginLeftPercent="4%"
            app:layout_marginTopPercent="2%"
            android:padding="7dp"
            android:background="@drawable/bg_description"
            />
      </com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout>
      <com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout
          android:id="@+id/rl_exp_approver"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/rl_exp_description"
          app:layout_marginLeftPercent="4%"
          app:layout_marginTopPercent="3%"
          >

        <Button
            android:id="@+id/btn_agree"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/holo_green_dark"
            app:layout_widthPercent="46%"
            app:layout_heightPercent="10%"
            android:textColor="@color/white"
            android:text="同意"
            />
        <Button
            android:id="@+id/btn_disagree"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/btn_agree"
            android:background="@android:color/holo_red_dark"
            app:layout_widthPercent="46%"
            app:layout_heightPercent="10%"
            android:textColor="@color/white"
            android:text="不同意"
            />

      </com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout>


      <com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout
          android:id="@+id/rl_exp_approval"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/rl_exp_approver"
          app:layout_marginLeftPercent="4%"
          app:layout_marginTopPercent="3%"
          >

        <TextView
            android:id="@+id/tv_tips_exp_approval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            app:layout_marginTopPercent="1%"
            android:text="@string/txt_exp_approval"
            />
        <com.meetutech.baosteel.widget.textview.TextViewLabel
            android:id="@+id/tv_exp_approval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_tips_exp_approval"
            android:layout_alignBaseline="@id/tv_tips_exp_approval"
            android:textColor="@color/white"
            app:labelColor="@android:color/holo_green_light"
            />
      </com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout>

      <com.meetutech.baosteel.widget.textview.TextViewLabel
          android:id="@+id/tv_state"
          android:textColor="@color/white"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          app:layout_marginTopPercent="1%"
          app:layout_marginRightPercent="4%"
          app:labelColor="@android:color/holo_green_light"
          />
      <com.meetutech.baosteel.widget.textview.TextViewLabel
          android:id="@+id/tv_furnace_info"
          android:textColor="@color/white"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_below="@id/rl_exp_duration"
          android:text="@string/btn_furnace_info"
          app:layout_marginRightPercent="4%"
          app:labelColor="@android:color/black"
          />

      <View
          android:id="@+id/divider_1"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_below="@id/rl_exp_approval"
          android:background="@color/divider_grey"
          app:layout_marginTopPercent="3%"
          />

      <com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout
          android:id="@+id/rl_menus"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:layout_heightPercent="20%"
          android:layout_below="@id/divider_1"
          >

        <Button
            android:id="@+id/btn_chat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_widthPercent="25%"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color_h1"
            android:text="@string/btn_chat"
            android:background="@null"
            android:drawableTop="@drawable/detail_chaticon"
            />
        <Button
            android:id="@+id/btn_rating"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_widthPercent="25%"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color_h1"
            android:text="@string/btn_rating_exp"
            android:layout_toRightOf="@id/btn_chat"
            android:background="@null"
            android:drawableTop="@drawable/detail_suggestion_icon"
            />
        <Button
            android:id="@+id/btn_realtime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_widthPercent="25%"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color_h1"
            android:text="@string/btn_realtime_data"
            android:layout_toRightOf="@id/btn_rating"
            android:background="@null"
            android:drawableTop="@drawable/detail_realtime_icon"
            />
        <Button
            android:id="@+id/btn_analysis"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_widthPercent="25%"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color_h1"
            android:text="@string/btn_data_analysis"
            android:layout_toRightOf="@id/btn_realtime"
            android:background="@null"
            android:drawableTop="@drawable/detail_analysis_icon"
            />
        <View
            android:id="@+id/divider_h1"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/divider_grey"
            app:layout_marginTopPercent="3%"
            app:layout_marginBottomPercent="3%"
            app:layout_marginLeftPercent="25%"
            />
        <View
            android:id="@+id/divider_h2"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/divider_grey"
            app:layout_marginTopPercent="3%"
            app:layout_marginBottomPercent="3%"
            android:layout_toRightOf="@id/divider_h1"
            app:layout_marginLeftPercent="25%"
            />
        <View
            android:id="@+id/divider_h3"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/divider_grey"
            app:layout_marginTopPercent="3%"
            app:layout_marginBottomPercent="3%"
            android:layout_toRightOf="@id/divider_h2"
            app:layout_marginLeftPercent="25%"
            />


      </com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout>

      <View
          android:id="@+id/divider_2"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_below="@id/rl_menus"
          android:background="@color/divider_grey"
          />

      <com.meetutech.baosteel.widget.layout.AbsPercentLinearLayout
          android:id="@+id/ll_workstat"
          android:orientation="vertical"
          android:layout_below="@id/divider_2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          />


    </com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout>
  </ScrollView>
</com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout>
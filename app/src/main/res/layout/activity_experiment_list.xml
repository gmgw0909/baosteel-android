<?xml version="1.0" encoding="utf-8"?>
<com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_page_bg">

  <include
      android:id="@+id/ic_header"
      layout="@layout/header_list_common"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      app:layout_heightPercent="12.8%"
      />

  <com.jude.rollviewpager.RollPagerView
      android:id="@+id/vp_content"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/ic_header"
      app:layout_heightPercent="56.27%"
      app:rollviewpager_play_delay="4000"
      app:rollviewpager_hint_gravity="right"
      app:rollviewpager_hint_color="@color/common_grey"
      app:rollviewpager_hint_paddingRight="5dp"
      app:rollviewpager_hint_paddingBottom="15dp"
      app:rollviewpager_hint_alpha="80"
      />

  <ListView
      android:id="@+id/list_exp"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@id/vp_content"
      app:layout_marginLeftPercent="4%"
      android:divider="@color/divider_grey"
      android:dividerHeight="0.8dp"
      />


</com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout>
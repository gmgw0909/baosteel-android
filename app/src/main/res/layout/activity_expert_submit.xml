<?xml version="1.0" encoding="utf-8"?>
<com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_page_bg">

  <include
      android:id="@+id/ic_header"
      layout="@layout/header_submit_common"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      app:layout_heightPercent="12.8%"
      />

  <EditText
      android:id="@+id/et_advice"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@id/ic_header"
      android:background="@color/common_white"
      android:padding="10dp"
      android:gravity="top"
      android:textColor="@color/text_color_h1"
      android:lines="30"
      android:focusableInTouchMode="true"
      />

</com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout>
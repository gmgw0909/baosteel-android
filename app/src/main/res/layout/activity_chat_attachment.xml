<?xml version="1.0" encoding="utf-8"?>
<com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <Button
        android:id="@+id/btn_attachment_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_heightPercent="20%"
        app:layout_widthPercent="20%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        app:layout_marginTopPercent="5%"
        android:background="@drawable/btn_common_light"
        android:textColor="@color/text_color_h1"
        android:text="@string/btn_chat_gallery"
        />
    <com.meetutech.chatkit.messages.AudioRecordButton
        android:id="@+id/btn_attachment_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn_attachment_image"
        app:layout_heightPercent="20%"
        app:layout_widthPercent="20%"
        app:layout_marginRightPercent="5%"
        app:layout_marginTopPercent="5%"
        android:textColor="@color/text_color_h1"
        android:background="@drawable/btn_common_light"
        android:text="@string/btn_chat_voice"
        />
    <Button
        android:id="@+id/btn_attachment_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn_attachment_audio"
        app:layout_heightPercent="20%"
        app:layout_widthPercent="20%"
        app:layout_marginRightPercent="5%"
        app:layout_marginTopPercent="5%"
        android:textColor="@color/text_color_h1"
        android:background="@drawable/btn_common_light"
        android:text="@string/btn_chat_video"
        />



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_light_grey"
        android:layout_alignParentTop="true"
        />


</com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout>
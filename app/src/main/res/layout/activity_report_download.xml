<?xml version="1.0" encoding="utf-8"?>
<com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_page_bg">

  <include
      android:id="@+id/ic_header"
      layout="@layout/header_close_common"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      app:layout_heightPercent="12.8%"
      />

  <View
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:background="@drawable/icon_report_pdf"
      app:layout_marginTopPercent="29.33%"
      app:layout_widthPercent="34.67%"
      app:layout_heightPercent="34.67%"
      />
  <TextView
      android:id="@+id/tv_report_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:textColor="@color/text_color_h1"
      app:layout_marginTopPercent="69.1%"
      />
  <TextView
      android:id="@+id/tv_report_size"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/tv_report_name"
      android:layout_centerHorizontal="true"
      android:textColor="@color/text_color_h1"
      app:layout_marginTopPercent="2%"
      />
  <TextView
      android:id="@+id/tv_report_validtime"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/tv_report_size"
      android:layout_centerHorizontal="true"
      android:textColor="@color/text_color_h3"
      app:layout_marginTopPercent="2%"
      />

  <Button
      android:id="@+id/btn_download"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:textColor="@color/text_color_h1"
      android:gravity="center"
      android:layout_below="@id/tv_report_validtime"
      android:background="@drawable/btn_blue_theme"
      android:text="@string/btn_download"
      app:layout_heightPercent="8.53%"
      app:layout_widthPercent="74.67%"
      app:layout_marginTopPercent="5.33%"
      />

</com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout>
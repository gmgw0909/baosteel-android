<?xml version="1.0" encoding="utf-8"?>
<com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/tv_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_h1"
        android:layout_centerInParent="true"
        />

    <com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout
        android:id="@+id/rl_header_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        app:layout_marginLeftPercent="3%"
        >
        <Button
            android:id="@+id/btn_header_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/back_btn"
            app:layout_widthPercent="1.95%"
            app:layout_heightPercent="3.178%"
            />
        <TextView
            android:id="@+id/tv_header_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/btn_header_back"
            android:textColor="@color/text_color_h1"
            android:layout_centerVertical="true"
            android:text="@string/header_back_btn"
            app:layout_marginLeftPercent="0.5%"
            />
    </com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout>

    <Button
        android:id="@+id/btn_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/detail_chaticon"
        app:layout_marginRightPercent="3%"
        app:layout_widthPercent="4%"
        app:layout_heightPercent="4%"
        />

    <View
        android:id="@+id/header_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_grey"
        android:layout_alignParentBottom="true"
        />

</com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout>
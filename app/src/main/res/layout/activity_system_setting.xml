<?xml version="1.0" encoding="utf-8"?>
<com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_info_page_bg">

  <include
      android:id="@+id/ic_header"
      layout="@layout/header_close_common"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      app:layout_heightPercent="12.8%"
      />
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@id/ic_header"
      >
    <com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <View
            android:id="@+id/divider_1"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/divider_grey"
            />
        <com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout
            android:id="@+id/rl_openpush"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            app:layout_heightPercent="12%"
            android:gravity="center_vertical"
            android:background="@color/common_white"
            android:layout_below="@id/divider_1"
            >

            <TextView
                android:id="@+id/tv_tips_openpush"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_h1"
                android:text="@string/txt_setting_push_switch"
                android:layout_centerVertical="true"
                app:layout_marginLeftPercent="4%"
                />
            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/sb_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:layout_marginRightPercent="4%"
                app:layout_widthPercent="13.6%"
                app:layout_heightPercent="6.267%"
                app:kswAnimationDuration="300"
                app:kswBackDrawable="@drawable/ios_back_drawable"
                app:kswBackMeasureRatio="1.4"
                app:kswThumbDrawable="@drawable/ios_thumb_selector"
                app:kswThumbMarginBottom="-8dp"
                app:kswThumbMarginLeft="-5dp"
                app:kswThumbMarginRight="-5dp"
                app:kswThumbMarginTop="-2.5dp"
                />
        </com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout>
      <View
          android:id="@+id/divider_2"
          android:layout_below="@id/rl_openpush"
          android:layout_width="match_parent"
          android:layout_height="0.8dp"
          android:background="@color/divider_grey"
          />

      <View
          android:id="@+id/divider_3"
          android:layout_below="@id/divider_2"
          android:layout_width="match_parent"
          android:layout_height="0.8dp"
          android:background="@color/divider_grey"
          app:layout_marginTopPercent="6.4%"
          />
      <com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout
          android:id="@+id/rl_smallfont"
          android:descendantFocusability="blocksDescendants"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:layout_heightPercent="12%"
          android:gravity="center_vertical"
          android:background="@color/common_white"
          android:layout_below="@id/divider_3"
          >

        <TextView
            android:id="@+id/tv_tips_font_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color_h1"
            android:text="@string/txt_setting_font_small"
            app:layout_marginLeftPercent="4%"
            />
        <View
            android:id="@+id/icon_check_small"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_list_check"
            android:layout_alignParentRight="true"
            app:layout_marginRightPercent="8%"
            app:layout_widthPercent="3.4%"
            app:layout_heightPercent="2.72%"
            />
      </com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout>
      <View
          android:id="@+id/divider_4"
          android:layout_below="@id/rl_smallfont"
          android:layout_width="match_parent"
          android:layout_height="0.8dp"
          android:background="@color/divider_grey"
          app:layout_marginLeftPercent="4%"
          />
      <com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout
          android:id="@+id/rl_mediumfont"
          android:descendantFocusability="blocksDescendants"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:layout_heightPercent="12%"
          android:gravity="center_vertical"
          android:background="@color/common_white"
          android:layout_below="@id/divider_4"
          >

        <TextView
            android:id="@+id/tv_tips_font_medium"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_h1"
            android:text="@string/txt_setting_font_medium"
            app:layout_marginLeftPercent="4%"
            />
        <View
            android:id="@+id/icon_check_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_list_check"
            android:layout_alignParentRight="true"
            app:layout_marginRightPercent="8%"
            app:layout_widthPercent="3.4%"
            app:layout_heightPercent="2.72%"
            />
      </com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout>
      <View
          android:id="@+id/divider_5"
          android:layout_below="@id/rl_mediumfont"
          android:layout_width="match_parent"
          android:layout_height="0.8dp"
          android:background="@color/divider_grey"
          app:layout_marginLeftPercent="4%"
          />
      <com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout
          android:id="@+id/rl_largefont"
          android:descendantFocusability="blocksDescendants"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:layout_heightPercent="12%"
          android:gravity="center_vertical"
          android:background="@color/common_white"
          android:layout_below="@id/divider_5"
          >

        <TextView
            android:id="@+id/tv_tips_font_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color_h1"
            android:text="@string/txt_setting_font_large"
            app:layout_marginLeftPercent="4%"
            />
        <View
            android:id="@+id/icon_check_large"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_list_check"
            android:layout_alignParentRight="true"
            app:layout_marginRightPercent="8%"
            app:layout_widthPercent="3.4%"
            app:layout_heightPercent="2.72%"
            />
      </com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout>
      <View
          android:id="@+id/divider_6"
          android:layout_below="@id/rl_largefont"
          android:layout_width="match_parent"
          android:layout_height="0.8dp"
          android:background="@color/divider_grey"
          />

      <View
          android:id="@+id/icon_logo"
          android:layout_below="@id/divider_6"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/icon_setting_logo"
          android:layout_centerHorizontal="true"
          app:layout_marginTopPercent="6.4%"
          app:layout_widthPercent="42.4%"
          app:layout_heightPercent="8.8%"
          />

      <TextView
          android:id="@+id/tv_tips_version"
          android:textColor="@color/text_color_h3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:text="@string/txt_setting_version"
          android:layout_below="@id/icon_logo"
          app:layout_marginTopPercent="2.13%"
          />

      <TextView
          android:id="@+id/tv_tips_service"
          android:textColor="@color/text_hyper_link"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/txt_setting_service"
          android:layout_below="@id/tv_tips_version"
          app:layout_marginTopPercent="2.13%"
          app:layout_marginLeftPercent="24%"
          />
      <TextView
          android:id="@+id/tv_tips_and"
          android:textColor="@color/text_color_h3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:text="@string/txt_setting_and"
          android:layout_below="@id/tv_tips_version"
          app:layout_marginTopPercent="2.13%"
          />
      <TextView
          android:id="@+id/tv_tips_privacy"
          android:textColor="@color/text_hyper_link"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:text="@string/txt_setting_privacy"
          android:layout_below="@id/tv_tips_version"
          app:layout_marginTopPercent="2.13%"
          app:layout_marginRightPercent="24%"

          />



    </com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout>
  </ScrollView>

  <Button
      android:id="@+id/btn_logout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_alignParentBottom="true"
      android:textColor="@color/common_white"
      android:gravity="center"
      android:background="@drawable/btn_pink_theme"
      android:text="@string/txt_setting_logout"
      app:layout_marginBottomPercent="5.6%"
      app:layout_heightPercent="8.53%"
      app:layout_widthPercent="74.67%"
      />



</com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <TextView
      android:id="@+id/tv_name"
      android:textStyle="bold"
      android:textColor="@color/text_color_h1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_marginTopPercent="4%"
      app:layout_marginRightPercent="20%"
      android:singleLine="true"
      android:ellipsize="middle"
      />
  <TextView
      android:id="@+id/tv_desc"
      android:textColor="@color/text_color_h2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/tv_name"
      android:singleLine="true"
      app:layout_marginTopPercent="1.5%"
      app:layout_marginRightPercent="20%"

      />
  <TextView
      android:id="@+id/tv_duration"
      android:textColor="@color/text_color_h5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/tv_desc"
      app:layout_marginTopPercent="1.5%"
      />
  <com.meetutech.baosteel.widget.textview.TextViewLabel
      android:id="@+id/tv_state"
      android:textColor="@color/white"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      app:layout_marginRightPercent="7.5%"
      app:labelColor="@android:color/holo_green_light"
      />

  <Button
      android:background="@drawable/arrow_right"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      app:layout_marginRightPercent="3.78%"
      app:layout_widthPercent="2.08%"
      app:layout_heightPercent="3.467%"
      />
</com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout>
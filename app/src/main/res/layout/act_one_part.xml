                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/common_info_page_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:background="@color/blue_003D80" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="炉温炉压"
                    android:textColor="@color/black"
                    android:textSize="@dimen/album_sp_16"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp3"
                    android:paddingBottom="@dimen/dp3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv13"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="流量压力"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="14dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/dialog_divider" />

                        <TextView
                            android:id="@+id/tv14"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="流量压力"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/common_info_page_bg" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="中轴温度组"
                android:textColor="@color/black"
                android:textSize="@dimen/album_sp_16"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white_three" />

            <com.meetutech.baosteel.widget.MyGridView
                android:id="@+id/gridView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnWidth="10dp"
                android:numColumns="2" />

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/common_info_page_bg" />

            <com.veken.chartview.view.LineChartView
                android:id="@+id/chart_view"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="@dimen/dp10"
                android:paddingRight="20dp"
                app:clickable="true"
                app:defaultStrokeWidth="0.5dp"
                app:defaultTextSize="13sp"
                app:endColor="@color/endColor"
                app:isNeedBg="true"
                app:pointClickRadius="2dp"
                app:pointDefaultRadius="2dp"
                app:showPicResource="@mipmap/ic_launcher"
                app:startColor="@color/startColor" />

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/common_info_page_bg" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="视频画面"
                android:textColor="@color/black"
                android:textSize="@dimen/album_sp_16"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white_three" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sp1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="视频1"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sp2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="视频2"
                    android:textColor="@color/common_grey"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sp3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="视频3"
                    android:textColor="@color/common_grey"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sp4"
                    android:layout_width="0dp"

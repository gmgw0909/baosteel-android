<?xml version="1.0" encoding="utf-8"?>
<com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_page_bg">

  <include
      android:id="@+id/ic_header"
      layout="@layout/header_close_common"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      app:layout_heightPercent="12.8%"
      />

  <ListView
      android:id="@+id/list_monitor"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@id/ic_header"
      android:divider="@color/divider_grey"
      android:dividerHeight="0.8dp"
      />


</com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout>
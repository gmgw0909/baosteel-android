<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f8f8f8"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_bg"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ju" />

            <ImageView
                android:id="@+id/bg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="330dp"
                android:background="@drawable/white_radius"
                android:scaleType="center"
                android:src="@drawable/yuanceng" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="工业炉专家系统"
            android:textColor="@color/blue_003D80"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="手机版"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp25"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginRight="@dimen/dp25"
            android:background="@drawable/bg_r4_white"
            android:drawableLeft="@drawable/xingzhuang"
            android:drawablePadding="@dimen/album_dp_15"
            android:hint="用户名"
            android:paddingLeft="12dp"
            android:textColorHint="#95A1AA" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp25"
                android:layout_marginTop="@dimen/album_dp_10"
                android:layout_marginRight="@dimen/dp25"
                android:background="@drawable/bg_r4_white"
                android:drawableLeft="@drawable/juxing"
                android:drawablePadding="@dimen/album_dp_15"
                android:hint="密码"
                android:inputType="textPassword"
                android:paddingLeft="12dp"
                android:paddingRight="@dimen/album_dp_15"
                android:textColorHint="#95A1AA" />

            <ImageView
                android:id="@+id/bt_eyes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginTop="@dimen/album_dp_10"
                android:layout_marginRight="@dimen/dp30"
                android:padding="@dimen/dp10"
                android:src="@drawable/ic_eyes" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/album_dp_15"
            android:gravity="center">

            <Button
                android:id="@+id/btn_about"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_r4_l_b_white"
                android:gravity="center"
                android:text="公司简介"
                android:textColor="@color/blue_003D80"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp30"
                android:background="@drawable/bg_r4_blue"
                android:gravity="center"
                android:text="用户登录"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/album_dp_10"
                android:text="宝钢工程"
                android:textColor="@color/blue"
                android:textSize="13sp" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>



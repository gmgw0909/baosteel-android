<?xml version="1.0" encoding="utf-8"?>
<com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_page_bg"
    >

  <include
      android:id="@+id/ic_header"
      layout="@layout/header_common_land"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      app:layout_heightPercent="7.2%"
      />

  <com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@id/ic_header"
      >

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="1%"
        app:ci_drawable="@drawable/gray_radius"
        app:ci_drawable_unselected="@drawable/black_radius"
        android:layout_height="wrap_content"
        />

  </com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout>

</com.meetutech.baosteel.widget.layout.AbsPercentRelativeLayout>
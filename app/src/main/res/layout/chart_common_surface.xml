<?xml version="1.0" encoding="utf-8"?>
<com.meetutech.baosteel.widget.layout.RefPercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <com.meetutech.baosteel.widget.chart.GLSurfaceChart
      android:id="@+id/chart"
      android:background="@color/white"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_widthPercent="45%"
      app:layout_heightPercent="85%"
      app:layout_marginTopPercent="1%"
      app:layout_marginLeftPercent="1%"
      />
  <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
      android:id="@+id/seekbar_x"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_widthPercent="50%"
      android:layout_alignParentBottom="true"
      app:dsb_min="2"
      app:dsb_max="15"
      />
  <com.meetutech.baosteel.widget.VerticalSeekbar
      android:id="@+id/seekbar_y"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_heightPercent="45%"
      app:layout_marginTopPercent="45%"
      app:layout_marginLeftPercent="45%"
      app:dsb_min="2"
      app:dsb_max="15"
      />
</com.meetutech.baosteel.widget.layout.RefPercentRelativeLayout>